<odoo>
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Test action</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">tree,form</field>
        
    </record>

    <record id="test_model_tree_view" model="ir.ui.view">
        <field name="name">Test action</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree string="Test">
                <field name="name"/>
                <field name="selling_price"/>
                <field name="available_dates"/>
                <field name="number_of_rooms"/>
                <field name="state"/>
            </tree>
        </field>
        <field name="name">Type</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree string="Test">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- <record id="test_model_tree_view" model="ir.ui.view">
        <field name="name">Type</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree string="Test">
                <field name="name"/>
            </tree>
        </field>
    </record> -->

    <record model="ir.ui.view" id="test_form_custom_model">
        <field name="name">Test action</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="state" />
                        </group>
                    </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="number_of_rooms" />
                                    <field name="available_dates" />
                                    <field name="selling_price" />   
                                    <field name="active" />   
                                </group>
                            </page>
                        </notebook>
                </sheet> 
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="test_search_custom_model">
        <field name="name">Test action</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <filter name="name" string="name" domain="[('name', '=', True)]" />
                <field name="number_of_rooms" />
                <field name="state" />
            </search>
        </field>
    </record>
    
    <!-- <menuitem id="test_model_menu_action" action="test_model_action"/> -->
    
    <menuitem id="test_menu_root" name="Test">
        <menuitem id="test_first_level_menu" name="Test action">
            <menuitem id="test_model_menu_action_1st" action="test_model_action"/>
        </menuitem>
    </menuitem>

    <menuitem id="test_menu_root" name="Test">
        <menuitem id="type_first_level_menu" name="Type">
            <menuitem id="type_model_menu_action_1st" action="test_model_action"/>
        </menuitem>
    </menuitem>

</odoo>